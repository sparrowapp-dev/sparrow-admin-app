{
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["svelte", "vite/client"],
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
